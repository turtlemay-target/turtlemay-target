{
	"compilerOptions": {
	  "target": "ES6",
	  "jsx": "react",
	  "module": "CommonJS",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "outDir": "./dist",
	  "resolveJsonModule": true,
	  "types": ["@types/jest"]
	},
	"exclude": [
	  "node_modules",
	  "dist",
	  "out",
	  "coverage" // Optional: Exclude coverage directory if generating code coverage
	],
	"include": [
	  "src/**/*.ts",       // Include TypeScript source files
	  "src/**/*.tsx",      // Include TypeScript React source files
	  "test/**/*.ts",      // Include test TypeScript files if necessary
	  "test/**/*.tsx"
	]
  }
  