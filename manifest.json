{
	"name": "Turtlemay's Target Extension",
	"version": "0.1.1",
	"description": "Extension for Target.com",
	"manifest_version": 2,
	"background": {
		"scripts": ["src/background.js"],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": ["https://*.target.com/*"],
			"js": ["src/content.js"]
		}
	],
	"web_accessible_resources": ["*"],
	"permissions": ["activeTab", "tabs"]
}
